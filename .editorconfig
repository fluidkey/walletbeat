# EditorConfig: https://editorconfig.org

# Repository root.
root = true

[{,.editorconfig,.gitignore,.prettierrc,{,.github,.vscode,public,src}/**/*.{astro,css,js,json,jsx,md,mdx,mjs,ts,tsx,yaml}}]

# Set default charset.
charset = utf-8

# Unix-style newlines, newline ending every file.
end_of_line = lf
insert_final_newline = true

# Kill trailing whitespace.
trim_trailing_whitespace = true

# Indent style.
indent_style = tab
indent_size = 2
